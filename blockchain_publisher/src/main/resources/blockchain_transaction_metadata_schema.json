{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "creation_slot": {
          "type": "string",
          "pattern": "^[0-9]+$"
        },
        "version": {
          "type": "string"
        }
      },
      "required": ["creation_slot", "version"]
    },
    "org": {
      "type": "object",
      "properties": {
        "country_code": {
          "type": "string",
          "pattern": "^[A-Z]{2}$"
        },
        "name": {
          "type": "string"
        },
        "tax_id_number": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "currency_id": {
          "type": "string",
          "pattern": "^ISO_4217:[A-Z]{3}$|^ISO_24165:[A-Z0-9]+$"
        }
      },
      "required": ["country_code", "name", "tax_id_number", "id", "currency_id"]
    },
    "txs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "number": {
            "type": "string"
          },
          "batch_id": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "CardCharge",
              "VendorBill",
              "CardRefund",
              "Journal",
              "FxRevaluation",
              "Transfer",
              "CustomerPayment",
              "ExpenseReport",
              "VendorPayment",
              "BillCredit"
            ]
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "amount": {
                  "type": "string",
                  "pattern": "^[0-9]+(\\.[0-9]{1,2})?$"
                },
                "event": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": ["code", "name"]
                },
                "project": {
                  "type": "object",
                  "properties": {
                    "cust_code": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": ["cust_code", "name"]
                },
                "cost_center": {
                  "type": "object",
                  "properties": {
                    "cust_code": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": ["cust_code", "name"]
                },
                "document": {
                  "type": "object",
                  "properties": {
                    "number": {
                      "type": "string"
                    },
                    "currency": {
                      "type": "object",
                      "properties": {
                        "cust_code": {
                          "type": "string"
                        },
                        "id": {
                          "type": "string",
                          "pattern": "^ISO_4217:[A-Z]{3}$|^ISO_24165:[A-Z0-9]+$"
                        }
                      },
                      "required": ["cust_code", "id"]
                    },
                    "vat": {
                      "type": "object",
                      "properties": {
                        "cust_code": {
                          "type": "string"
                        },
                        "rate": {
                          "type": "string",
                          "pattern": "^0(\\.\\d{1,3})?$|^1(\\.0{1,3})?$"
                        }
                      }
                    },
                    "counterparty": {
                      "type": "object",
                      "properties": {
                        "cust_code": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        }
                      },
                      "required": ["cust_code", "type"]
                    }
                  },
                  "required": ["number", "currency"]
                },
                "id": {
                  "type": "string"
                },
                "fx_rate": {
                  "type": "string",
                  "pattern": "^[0-9]+(\\.[0-9]+)?$"
                }
              },
              "required": ["amount", "event", "document", "id", "fx_rate"]
            }
          },
          "accounting_period": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}$"
          }
        },
        "required": ["date", "number", "batch_id", "id", "type", "items", "accounting_period"]
      }
    }
  },
  "required": ["metadata", "org", "txs"]
}
